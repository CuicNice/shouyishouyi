/* components/fmin-toast/fmin-toast.wxss */

@import "../animations/animations.wxss";
.toast {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    z-index: 99999 !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    align-items: center !important;
    animation-duration: 0.3s !important;
    background: rgba(216, 216, 216, 0.3) !important;
}

.t-body {
    position: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    z-index: 100 !important;
    width: 272rpx !important;
    /* height: 100% !important; */
    background: linear-gradient(179.79deg, #B9EFE1 0.18%, #FCFCFC 60.54%) !important;
    box-shadow: 0rpx 2rpx 26rpx -12rpx rgba(0, 0, 0, 0.25) !important;
    border-radius: 14rpx !important;
}

.icon {
    width: 100% !important;
    height: 63.64rpx !important;
    margin-top: 72.66rpx !important;
    margin-bottom: 18.2rpx !important;
}

.title {
    margin-top: 30rpx !important;
    text-align: center !important;
    margin-bottom: 56rpx !important;
    line-height: 24rpx !important;
    /* 解决优先级问题 */
    overflow: visible !important;
}

.ltitle {
    margin-top: 30rpx !important;
    text-align: center !important;
    margin-bottom: 30rpx !important;
    /* 解决优先级问题 */
    overflow: visible !important;
}

.bg {
    position: absolute !important;
    width: 272rpx !important;
    height: 272rpx !important;
    align-items: center !important;
    z-index: 10 !important;
}