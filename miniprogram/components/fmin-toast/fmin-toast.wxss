/* components/fmin-toast/fmin-toast.wxss */
@import "../animations/animations.wxss";
.toast {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation-duration: 0.3s;
  background: rgba(216, 216, 216, 0.3);
}


.t-body {
  position: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 100;
  width: 272rpx;
  /* height: 100%; */
  background: linear-gradient(179.79deg, #B9EFE1 0.18%, #FCFCFC 60.54%);
box-shadow: 0px 1px 13px -6px rgba(0, 0, 0, 0.25);
border-radius: 7px;
}

.icon {
  width: 100%;
  height: 80rpx;
  margin-top: 72rpx;
  margin-bottom: 18.2rpx;
}

.title {
  margin-top: 30rpx;
  text-align: center;
  margin-bottom: 56rpx;
}
.ltitle{
  margin-top: 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.bg{
  position: absolute;
  width: 272rpx;
  height: 272rpx;
  align-items: center;
  z-index: 10;  
}