/* pages/login/login.wxss */
/* pages/my-page/my-page.wxss */
page {
  height: 100%;
  width: 100%;
  overflow-x: hidden; 
}
.container {
  display: flex;
  flex-direction: column;
  padding: 14.7% 5.6%;
  box-sizing: border-box;
}

.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}

.title {
  width: 384rpx;
  height: 44rpx;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 44rpx;

  /* text */
  color: #292945;
}

.paw {
  width: 18rpx;
  height: 18rpx;
  position: relative;
  bottom: 20rpx;
  right: 20rpx;
}

.nicknameInput {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  /* Half-screen Dialog */
  width: 100%;
  height: 710rpx;
   /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  border-radius: 40rpx 40rpx 0rpx 0rpx;
}


.btn {
  border-radius: 75rpx;
  height: 84rpx;
  /* font-size: 14px; */
  font-weight: 500;
  font-size: 32rpx;
  padding: 0;
  line-height: 84rpx;
}

.btn .button:not([size=mini]) {
  width: 214rpx;
  height: 84rpx;
}

.input {
  /* input */
  margin: 0 auto;
  /* Auto layout */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12px 18px;
  gap: 10px;
  width: 558rpx;
  height: 44rpx;

  background: #EEF4F2;
  border-radius: 4px;

  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}

.label {
  font-weight: 500;
  font-size: 14px;
  line-height: 20px;
  color: #292945;
  opacity: 0.6;
}

.placeholder {
  float: right;
}

.tips {
  align-items: center;
  margin: 20rpx auto;

  height: 14px;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  line-height: 14px;
  /* identical to box height */
  text-transform: capitalize;

  color: #000000;

  opacity: 0.6;
}

.loginDialogBoxBtn{
  display: flex;
  flex-direction: row;
  margin-top: 102rpx;
}

/* 下面是popup的样式 */
