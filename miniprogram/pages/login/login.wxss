page {
  overflow: hidden;
}

/* 背景颜色 */
.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}

/* 背景的物体 */
.bgThingsBox {
  position: fixed;
  left: 254.66rpx;
  top: 532rpx;
  opacity: 0.2;
}

.bgThings {
  width: 178.74 !important;
  height: 881.48rpx !important;
}

/* 图片logo */
.topTittle {
  width: 100%;
}

.topTittleImage {
  width: 376rpx;
  height: 162rpx;
  padding: 94rpx 310rpx 94rpx 64rpx;
}

/* 登录框 */
.loginRegion {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.inputRegion {
  display: flex;
  flex-direction: column;
  gap: 34rpx;
}

.numberInput {
  /* Auto layout */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 36rpx;
  width: 558rpx;
  height: 44rpx;
  background: rgba(255, 255, 255, 0.5);
  /* #20C38C */
  border: 1px solid #20C38C;
  border-radius: 4px;
}

.label {
  font-weight: 500;
  font-size: 14px;
  line-height: 20px;
  color: #292945;
  opacity: 0.6;
}

.inputBox {
  text-align: right;
}

/* 提示小字 */
.inputTip {
  height: 34rpx;
  width: 620rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 12px;
  line-height: 17px;
  color: #000000;
  opacity: 0.6;
  padding: 20rpx;
}
/* 按钮样式，部分样式写在了wxml种，这是微信的bug */
.btn {
  padding: 20rpx 28rpx;
  gap: 20rpx;
  border-radius: 70rpx;
}
/* 弹窗的按钮框 */
.toastBtnBox{
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}