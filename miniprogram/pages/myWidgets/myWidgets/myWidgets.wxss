/* pages/myWidgets/myWidgets/myWidgets.wxss */

.bg {
    /* Entering for the first time */
    position: absolute;
    width: 100%;
    height: 100%;
    /* 背景 */
    background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
    z-index: -999;
}


/* 页面 */

.container {
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    padding: 200rpx 0 200rpx;
    gap: 40rpx;
}


/* 顶部状态栏开始 */

.top-bar {
    position: fixed;
    width: 100%;
    z-index: 999;
    padding-left: 40rpx;
}


/* 名字后面的三个点 */

.barTextDot {
    display: flex;
    width: 13.22rpx;
    height: 14rpx;
    align-items: flex-start;
}

.barTextDotSvg {
    width: 13.22rpx !important;
    height: 14rpx !important;
}

.btn-box {
    display: flex;
}

.school-btn {
    margin-top: 40rpx;
}

.mCancel {}

.btn {
    border-radius: 75rpx;
    width: 214rpx;
    height: 84rpx;
    /* font-size: 14px; */
    font-weight: 500;
    font-size: 32rpx;
    padding: 0;
    line-height: 84rpx;
}

.btn .button:not([size=mini]) {
    width: 214rpx;
    height: 84rpx;
}

.returnBox {
    display: flex;
    align-self: start;
    width: 18rpx;
    left: 1800rpx;
    height: 34rpx;
    color: #000000;
}

.returnSvg {
    width: 24rpx;
    height: 48rpx;
}


/* 胶囊标题区 */

.capsule-box {
    /* display: inline; */
    display: flex;
    align-content: center;
    justify-content: space-between;
    vertical-align: middle;
    align-items: center;
}

.barLine {
    width: 240rpx;
    display: flex;
    /* align-content:center ; */
    align-items: center;
}

.barLineItem {
    /* flex: 1; */
    display: flex;
    color: #000000;
    flex-wrap: nowrap;
}

.returnButton {
    transform: translateX(32rpx);
    width: 24rpx;
    height: 48rpx;
}

.barText {
    /* transform: translateX(-10rpx); */
    /* 你好鸭~棍棍 */
    height: 44rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 700;
    font-size: 32rpx;
    line-height: 44rpx;
    color: #292945;
    mix-blend-mode: normal;
    letter-spacing: 2rpx;
}


/* 顶部状态栏结束 */


/* 设置按钮 */

.myWidgetSettingCircle {
    /* Frame 137 */
    position: absolute;
    width: 136rpx;
    height: 136rpx;
    left: 594rpx;
    top: 1156rpx;
    background: #4BDCAB;
    box-shadow: 0rpx 2rpx 40rpx -12rpx #4BDCAB;
    border-radius: 132rpx;
}

.myWidgetSettingCircleText {
    /* 设置 */
    position: absolute;
    width: 64rpx;
    height: 44rpx;
    left: 36rpx;
    top: 46rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
    color: #FFFFFF;
}