/* 背景 */
.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}
/* 页面 */
.container{
margin-top: 20px;
}
.remindBox {
  display: flex;
  flex-wrap: nowrap;
  /* flex-direction: column; */
  /* align-items: flex-start; */
  padding: 8px 10px;
  isolation: isolate;
  margin: 0 17.5px;
  height: 72px;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 10px;
  flex: none;
  order: 0;
  flex-grow: 0;
}
/* 提示 */
.remindBoxDes{
  display: flex;
  flex-wrap: wrap;
}

.remindTxt {
  width: 282px;
  height: 34px;

  font-family: 'PingFang SC';
