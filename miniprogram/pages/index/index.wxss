/* pages/myWidgets/myWidgets/myWidgets.wxss */

.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}


/* 页面 */

.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  padding-bottom: 200rpx;
  padding-top: 30rpx;
  gap: 40rpx;
}


/* 顶部状态栏开始 */

.top-bar {
  position: fixed;
  width: 100%;
  z-index: 999;
  padding-left: 40rpx;
}


/* 名字后面的三个点 */

.barTextDot {
  display: flex;
  width: 13.22rpx;
  height: 14rpx;
  align-items: flex-start;
}

.barTextDotSvg {
  width: 13.22rpx !important;
  height: 14rpx !important;
}

.btn-box {
  display: flex;
}

.school-btn {
  margin-top: 40rpx;
}


.btn {
  border-radius: 75rpx;
  width: 214rpx;
  height: 84rpx;
  /* font-size: 14px; */
  font-weight: 500;
  font-size: 32rpx;
  padding: 0;
  line-height: 84rpx;
}

.btn .button:not([size=mini]) {
  width: 214rpx;
  height: 84rpx;
}

.returnBox {
  display: flex;
  align-self: start;
  width: 18rpx;
  left: 1800rpx;
  height: 34rpx;
  color: #000000;
}

.returnSvg {
  width: 24rpx;
  height: 48rpx;
}


/* 胶囊标题区 */

.capsule-box {
  /* display: inline; */
  display: flex;
  align-content: center;
  justify-content: space-between;
  vertical-align: middle;
  align-items: center;
}

.barLine {
  width: 240rpx;
  display: flex;
  /* align-content:center ; */
  align-items: center;
}

.barLineItem {
  /* flex: 1; */
  display: flex;
  color: #000000;
  flex-wrap: nowrap;
}

.returnButton {
  transform: translateX(32rpx);
  width: 24rpx;
  height: 48rpx;
}

.barText {
  /* transform: translateX(-10rpx); */
  /* 你好鸭~棍棍 */
  height: 44rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 700;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #292945;
  mix-blend-mode: normal;
  letter-spacing: 2rpx;
}


/* 顶部状态栏结束 */


/* 设置按钮 */

.myWidgetSettingCircle {
  /* Frame 137 */
  position: fixed;
  width: 136rpx;
  height: 136rpx;
  left: 297px;
  bottom: 300rpx;
  background: #4BDCAB;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 2rpx 40rpx -12rpx #4BDCAB;
  border-radius: 132rpx;
}

.myWidgetSettingCircleText {
  /* 设置 */
  width: 64rpx;
  height: 44rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #FFFFFF;
}

.areaBox {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.functionArea {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
  padding: 12rpx 30rpx;
  width: 658rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  justify-content: space-between;
}

.areaItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  height: 154rpx;
}

.areaItemImage {
  width: 120rpx;
  height: 120rpx;
}

.areaItemName {
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 12px;
  line-height: 17px;
  /* identical to box height */


  color: #000000;

}

/* banner */
.pageBanner {
  width: 100%;
  padding: 30rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input {
  /* input */
  margin: 0 auto;
  /* Auto layout */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12px 18px;
  gap: 10px;
  width: 558rpx;
  height: 44rpx;

  background: #EEF4F2;
  border-radius: 4px;

  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}

.label {
  font-weight: 500;
  font-size: 14px;
  line-height: 20px;
  color: #292945;
  opacity: 0.6;
}

.placeholder {
  float: right;
}

.tips {
  align-items: center;
  margin: 20rpx auto;

  height: 14px;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  line-height: 14px;
  /* identical to box height */
  text-transform: capitalize;

  color: #000000;

  opacity: 0.6;
}

.loginDialogBoxBtn {
  display: flex;
  flex-direction: row;
  margin-top: 102rpx;
}

