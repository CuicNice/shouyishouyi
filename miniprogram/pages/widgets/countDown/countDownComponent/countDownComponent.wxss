/* pages/widgets/countDown/countDownComponment/countDownComponent.wxss */

.countdown {
    position: fixed;
    flex-wrap: wrap;
    /* bottom: 500rpx; */
    display: flex;
    background: linear-gradient(180.04deg, #B9EFE1 0.1%, #FCFCFC 100%);
    width: 586rpx;
    height: 174rpx;
    padding: 24rpx 42rpx;
    /* margin-top: 51rpx; */
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx #00000080;
}

.countdown-txt {
    /* Auto layout */
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 0rpx;
    flex-wrap: nowrap;
    width: 586rpx;
    height: 40rpx;
    /* Inside auto layout */
    flex: none;
    order: 0;
    align-self: stretch;
    flex-grow: 0;
    margin: -2rpx 0rpx;
}

.cd-txt {
    /* width: 158rpx; */
    height: 40rpx;
    letter-spacing: 0rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 28rpx;
    line-height: 40rpx;
    /* identical to box height */
    text-transform: capitalize;
    /* text */
    color: #020202;
    /* Inside auto layout */
    flex: none;
    order: 0;
    flex-grow: 0;
}

.countdownAllBox {
    width: 670rpx;
    display: flex;
    justify-content: space-between;
}


