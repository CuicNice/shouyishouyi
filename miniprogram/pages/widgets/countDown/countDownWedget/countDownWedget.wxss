}

.cdTitle {
    width: 120rpx;
    height: 42rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 30rpx;
    line-height: 42rpx;
    /* identical to box height */
    text-transform: capitalize;
    color: #000000;
    /* margin-bottom: 22rpx; */
    text-align: center;
}

.cdDay {
    width: 130rpx;
    height: 100rpx;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 72rpx;
    line-height: 100rpx;
    text-transform: capitalize;
    color: #20C38C;
    text-align: center;
    align-items: center;
    align-self: center;
}

