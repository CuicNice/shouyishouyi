/* pages/widgets/countDown/counDownWedGet/countDownWedget.wxss */
.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.countdown {
  position: fixed;
  bottom: 500rpx;
  display: flex;
  background: linear-gradient(180.04deg, #B9EFE1 0.1%, #FCFCFC 100%);
  height: 222rpx;
  width: 670rpx;
  margin: 0% 5%;
  margin-top: 51rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5px #00000080;
}


.countdown-txt{
  position: absolute;
  top:10rpx;
  left: 30rpx;
  height: 40rpx;
}
.cd-txt{
font-family: 'PingFang SC';
font-style: normal;
font-weight: 500;
font-size: 28rpx;
line-height: 40rpx;
/* identical to box height */
text-transform: capitalize;
/* text */
color: #292945;
}


.countdownAllBox{
  width: 670rpx;
  display: flex;
  justify-content: space-between; 
  margin-left: 40rpx;
  margin-right: 40rpx;
}
