.cdName {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 100%;
}

.cdTitle {
  width: 120rpx;
  height: 42rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 30rpx;
  line-height: 42rpx;
  /* identical to box height */
  text-transform: capitalize;
  color: #000000;
  margin-bottom: 22rpx;
  text-align: center;
}

.cdDay {
    width: 65px;
    height: 50px;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 36px;
    line-height: 50px;
    text-transform: capitalize;
    color: #20C38C;
    text-align: center;
}

