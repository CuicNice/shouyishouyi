page {
  height: 100%;
  width: 100%;
  overflow-x: hidden; 
}
.container {
  display: flex;
  flex-direction: column;
  padding: 14.7% 5.6%;
  box-sizing: border-box;
}

.bg {
  /* Entering for the first time */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 背景 */
  background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
  z-index: -999;
}

.title {
  width: 384rpx;
  height: 44rpx;

  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 44rpx;

  /* text */
  color: #292945;
}