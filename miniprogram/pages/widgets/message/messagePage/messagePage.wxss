/* pages/widgets/message/messagePage/messagePage.wxss */
.background{
width: 750rpx;
height: 1852rpx;
/* 背景 */
background: linear-gradient(180.04deg, #B9EFE1 0.04%, #FCFCFC 30%);
}
.messageList{
  width: 660rpx;
 margin-top: 60rpx;
 margin-left:46rpx ;
 margin-right: 44rpx;
}
.firstMessage{
width: 660rpx;
height: 292rpx;
background: #FFFFFF;
border: 4rpx solid #4BDCAB;
border-radius: 20rpx;
}
.title{
  margin: 16rpx 84rpx 10rpx 32rpx;
  width: 544rpx;
  height: 96rpx;
}
.titleText{
font-family: 'PingFang SC';
font-style: normal;
font-weight: 600;
font-size: 30rpx;
line-height: 48rpx;
text-transform: capitalize;
color: #292945;
}
.stitle{
width: 554rpx;
height: 96rpx;
margin: 0rpx 32rpx 10rpx 32rpx;
}
.stitleText{
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: justify;
  color: #000000;
  mix-blend-mode: normal;
  opacity: 0.5;
}
.bottomShow{
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
width: 596rpx;
height: 48rpx;
margin: 0rpx 32rpx 16rpx 32rpx ;
}
.timeShow{
display: flex;
flex-direction: row;
align-items: center;
padding: 0px;
gap: 6px;
width: 180rpx;
height: 48rpx;
}
.clock{
  width: 28rpx;
  height: 28rpx;
}
.timeShow text{
font-family: 'PingFang SC';
font-style: normal;
font-weight: 400;
font-size: 24rpx;
line-height: 48rpx;
text-transform: capitalize;
color: rgba(41, 41, 69, 0.6);
}
.likeBox{
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
padding: 0rpx;
gap: 12rpx;
width: 156rpx;
height: 48rpx;
}
.likeBox image{
  width: 28rpx;
  height: 28rpx;
}
.likeBox text{
width: 116rpx;
height: 48rpx;
font-family: 'PingFang SC';
font-style: normal;
font-weight: 400;
font-size: 24rpx;
line-height: 48rpx;
text-transform: capitalize;
color: rgba(41, 41, 69, 0.6);
}