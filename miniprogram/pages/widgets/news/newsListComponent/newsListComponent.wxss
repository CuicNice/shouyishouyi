/* components/intview/intview.wxss */
/* 引入全局样式 */

.infor-box {
display: flex;
justify-content: space-between;
  height: 126rpx;
  position: relative;
  margin: 0 61rpx 20rpx 61rpx;
  display: flex;
  gap: 36rpx;
  /* justify-content: flex-start; */
  border-bottom: 1px dashed rgba(41, 41, 69, 0.4);
  padding-bottom: 23rpx;
  /* background-color: #ca9c9c; */
}

.time-box {
  justify-content: center;
  /* 设置弹性盒子元素在主轴的对齐方式，这里direction是column只设置垂直居中 */
  align-items: center;
  align-self: center;
  /* 子元素水平居中显示 */
  flex-direction: column;
  /* 垂直还是水平排列 */
  overflow: cover;
  /* background-color: #000000; */
  position: relative;
  /* width: 126rpx; */
  right: 0rpx;
  text-align: center;
  overflow: hidden;
}

.year-box {
  display: flex;
  justify-content: center;
  /* 设置弹性盒子元素在主轴的对齐方式，这里direction是column只设置垂直居中 */
  align-items: center;
  /* 子元素水平居中显示 */
  flex-direction: column;
  /* 垂直还是水平排列 */
  overflow: cover;
  text-align: center;

}

.greenTime_day {
  align-self:center;
  width: 44px;
  height: 50px;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 36px;
  line-height: 50px;
  /* Style */
  color:var(--color-grassGreen);
  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}

.greyTime_day {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  overflow: cover;
  text-align: center;
  width: 44px;
  height: 50px;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 36px;
  line-height: 50px;
  /* Style */
  color: #7F7F8F;
  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}

.time-year {
  height: 17px;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 12px;
  line-height: 17px;
  /* identical to box height */
  color: #7F7F8F;
  /* Inside auto layout */
  flex: none;
  order: 1;
  flex-grow: 0;
}

.title-box {
  height: 145rpx;
  padding-bottom: 14rpx;
}

.item-title {
  width: 251px;
  height: 40px;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 13px;
  line-height: 18px;
  /* text */
  color: #292945;
  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
  letter-spacing: 1rpx;
  /* 文本内容显示限制 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;

}

.type {
  display: flex;
  flex-direction: flex-start;
  float: left;
  flex-wrap: nowrap;
  /* margin-bottom: 0rpx; */
  word-wrap: none;
  margin-top: 18rpx;

}
.item-typeBox{
  /* 盒子 */
  box-sizing: border-box;
/* Auto layout */
display: flex;
flex-direction: row;
align-items: center;
padding: 1px 8px;
gap: 4px;
height: 18px;
background: #FFFFFF;
border: 1px solid #E3E3E6;
border-radius: 50px;
/* Inside auto layout */
flex: none;
order: 0;
flex-grow: 0;
}
.typebox {
  display: flex;
  flex-direction: flex-start;
  margin-left: 16.08px;
  padding-top: 15rpx;
}

.type-today {
  display: flex;
  margin-bottom: 6rpx;
  word-wrap: none;
}

.type-new {
  display: flex;
  margin-right: 19rpx;
  margin-bottom: 6rpx;
  word-wrap: none;
}

.item-type {
  width: 48px;
  height: 16px;
  /* body Text/Inter/12/Medium */
  font-family: 'Inter';
  font-style: normal;
  font-weight: 500;
  font-size: 12px;
  line-height: 16px;
  /* identical to box height, or 133% */
  color: #20C38C;
  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}

@keyframes newflash {
  0% {
    transform-origin: left bottom;
    transform: rotateZ(0deg);
  }

  5% {
    transform-origin: left bottom;
    transform: rotateZ(-2deg);
  }

  15% {
    transform-origin: left bottom;
    transform: rotateZ(-8deg);
  }

  50% {
    transform-origin: left bottom;
    transform: rotateZ(-10deg);
  }

  60% {
    transform-origin: left bottom;
    transform: rotateZ(-8deg);
  }

  65% {
    transform-origin: left bottom;
    transform: rotateZ(-5deg);
  }

  70% {
    transform-origin: left bottom;
    transform: rotateZ(-3deg);
  }

  80% {
    transform-origin: left bottom;
    transform: rotateZ(-1.5deg);
  }

  100% {
    transform-origin: left bottom;
    transform: rotateZ(0deg);
  }
}

.today-icon {
  width: 74rpx;
  height: 25rpx;
  background: #FFFFFF;
  animation: newflash 2s infinite ease;
  /* margin-left: 30rpx; */
  /* 通过new的右边距来确定 */
}

.new-icon {
  width: 49rpx;
  height: 25rpx;
  background: #FFFFFF;
  animation: newflash 2s infinite ease;
}