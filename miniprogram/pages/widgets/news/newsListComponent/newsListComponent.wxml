<!--components/intview/intview.wxml-->
<!-- <navigator url="/pages/detail/detail"> -->
  <wxs src='../../../../wxs/utils.wxs' module='tools'/>         <!-- 引入切割字符串 -->
  <view class="infor-box" wx:for="{{list}}" wx:key="index" bindtap="gotoNewsDeatil">
<view class="title-box">
<view class="item-title" >{{item.outNewsTitle}}</view>
<view class="type"> 
  <view>  <text class="item-type">{{item.outNewsType}}</text></view>
  <view class="typebox">
  <!--三天之内 -->
    <view class="type-new" wx:if="{{isNew}}">  <image class='new-icon' src="/static/svg/news_new.svg"></image></view>
    <!-- 当日的 -->
    <view class="type-today" wx:if="{{isToday}}"><image class='today-icon' src="/static/svg/news_today.svg" ></image></view>
  </view>
</view>
  </view>
  <view class="time-box">
  <!-- 当日的日期需要变绿 -->
    <view class="isTime-day==false?'greenTime_day':'greyTime_day'">{{tools.substring(item.outNewsDate,8,10)}}</view>
    <view class="time-year">{{tools.substring(item.outNewsDate,0,4)}}.{{tools.substring(item.outNewsDate,5,7)}}</view>
  </view>
  </view>
